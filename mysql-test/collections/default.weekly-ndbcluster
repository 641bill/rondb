# Weekly suite for MySQL Server compiled with NDB.
#
# Including NDB adds two more storage engine,
# a few new information_schema tables, the ndbinfo database and more tables
# in the mysql database. This test run detects typical problems caused by these
# additions.
#

# 1. Repeat of daily runs
# Default suites (in modes binlog format stmt/mixed/row)
perl mysql-test-run.pl --force --timer  --big-test --testcase-timeout=90 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=normal-debug-big  --vardir=var-normal-debug-big  --report-features --skip-test-list=collections/disabled-weekly.list --mysqld=--innodb_autoextend_increment=64 --mysqld=--show_compatibility_56=ON --unit-tests-report --skip-ndb --mysqld=--show
# embedded
# --debug-server is not used for embedded runs since debug build of embedded server is not available
perl mysql-test-run.pl --force --timer  --big-test --testcase-timeout=60 --parallel=auto --experimental=collections/default.experimental --comment=embedded-big --mysqld=--show_compatibility_56=ON --vardir=var-embedded-big  --embedded-server --skip-ndb
# ps-protocol
perl mysql-test-run.pl --force --timer  --big-test --testcase-timeout=90 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=ps-debug-big  --mysqld=--show_compatibility_56=ON --vardir=var-ps-debug-big  --ps-protocol --skip-test-list=collections/disabled-weekly.list --skip-ndb

# 2. Run the ndbcluster suite only(separately for better report in the CI tool).
perl mysql-test-run.pl --force --timer  --big-test --testcase-timeout=90 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=ndbcluster --mysqld=--show_compatibility_56=ON --vardir=var-ndbcluster --skip-test-list=collections/disabled-weekly.list --suite=ndbcluster
# embedded
# --debug-server is not used for embedded runs since debug build of embedded server is not available
perl mysql-test-run.pl --force --timer  --big-test --testcase-timeout=60 --parallel=auto --experimental=collections/default.experimental --comment=ndbcluster_embedded --mysqld=--show_compatibility_56=ON --vardir=var-ndbcluster-embedded --skip-test-list=collections/disabled-weekly.list --suite=ndbcluster --embedded-server
# ps-protocol
perl mysql-test-run.pl --force --timer  --big-test --testcase-timeout=90 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=ndbcluster_ps --mysqld=--show_compatibility_56=ON --vardir=var-ndbcluster-ps --ps-protocol --skip-test-list=collections/disabled-weekly.list --suite=ndbcluster

# 3. Run the suites that are not part of the default - funcs_2, stress, jp, nist
perl mysql-test-run.pl --force --timer  --big-test --testcase-timeout=60 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=funcs2-debug  --mysqld=--show_compatibility_56=ON --vardir=var-funcs2-big  --suite=funcs_2
perl mysql-test-run.pl --force --timer --big-test --testcase-timeout=60 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=stress-debug-big --mysqld=--show_compatibility_56=ON --vardir=var-stress-debug-big  --suite=stress
perl mysql-test-run.pl --force --timer --big-test --testcase-timeout=60 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=jp-debug-big --mysqld=--show_compatibility_56=ON --vardir=var-jp-debug-big --suite=jp
perl mysql-test-run.pl --force --timer --big-test --testcase-timeout=60 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=nist-debug-big --mysqld=--show_compatibility_56=ON --vardir=var-nist-debug-big --suite=nist
perl mysql-test-run.pl --force --timer --testcase-timeout=60 --debug-server --parallel=auto --experimental=collections/default.experimental --comment=nist+ps-debug --mysqld=--show_compatibility_56=ON --vardir=var-ps_nist-debug  --suite=nist  --ps-protocol

