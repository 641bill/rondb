# BUG 14695968 - If a table has a tinyblob column and one uses 'ndb_desc -pb' to dump both extra information about partitions and blob tables, ndb_desc crashes.

-- echo # bug#14695968

--echo "ndb_desc -pb with tinyblob column"

CREATE TABLE test.t1 (a int primary key, b tinyblob)engine=ndbcluster;

-- source include/have_ndb.inc

## Check details of partitioning
--replace_regex /NDB\$BLOB_[0-9]+/NDB$BLOB_ID/ /Version[[.colon.]][[.space.]][0-9]+/Version: VERSION_NUMBER/

##/Version \:[0-9]+/Version \:VersionNumber/
--exec $NDB_DESC --no-defaults -pb -dtest t1

--echo "ndb_desc -pb with all types of blob and text columns"

CREATE TABLE test.t2 (a int primary key, b tinyblob, c mediumblob,
d blob, e longblob,f tinytext, g text, h mediumtext, i longtext)
engine=ndbcluster;

## Check details of partitioning
--replace_regex /NDB\$BLOB_[0-9]+/NDB$BLOB_ID/ /Version[[.colon.]][[.space.]][0-9]+/Version: VERSION_NUMBER/
--exec $NDB_DESC --no-defaults -pb -dtest t2

DROP TABLE test.t1;
DROP TABLE test.t2;
