## Cleanup
DROP SCHEMA IF EXISTS xtest;
SET GLOBAL mysqlx_compression_server_style = DEFAULT;
--remove_files_wildcard $MYSQL_TMP_DIR *.xpl
--source include/xplugin_drop_user.inc
