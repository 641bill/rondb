use strict;
use lib "lib/";
use My::Memcache;

my $port = $ENV{NDB_MEMCACHED_1_PORT} or die "Need NDB_MEMCACHED_1_PORT";

my $mc = My::Memcache->new();
my $r = $mc->connect("localhost",$port);

if($r == 0) {
  print STDERR "DID NOT CONNECT TO MEMCACHE AT PORT $port \n";
}

# Here are some values
our $val_50 = "ABCDEFGHIJKLMNOPQRSTabcdefghijklmnopqrst123456789_";
our $val_40 = "Riga,Stockholm,Helsinki,Oslo,Copenhagen_";
our $val_100k = $val_50 x 2000;
our $val_60k  = $val_40 x 1500;
our $val_13949 = "." x 13949;


my $mcBin = My::Memcache::Binary->new();
$mcBin->connect("localhost", $port);

run_test($mc);       # Test with ASCII protocol
run_test($mcBin);    # Test with binary protocol


sub run_test() {
  my $mc = shift;
  
  # Flush all
  $mc->flush();

  # Do two INSERTS.  The first should succeed, the second should fail.
  $mc->add("b:long_val_1", $val_100k)  || $mc->fail("t1 Failed Insert");
  $mc->add("b:long_val_1", $val_100k)  && $mc->fail("t2 Insert should fail");

  # Do two DELETES.  The first should succeed, the second should fail.
  $mc->delete("b:long_val_1")  || $mc->fail("t3 Failed delete");
  $mc->delete("b:long_val_1")  && $mc->fail("t4 Delete should fail");

  # Do an insert, then a read, then a delete, then a read
  $mc->add("b:long_val_2", $val_100k)     || $mc->fail("t5 Failed insert");
  my $v = $mc->get("b:long_val_2");
  if($v ne $val_100k) {
    my $msg = "t6 GET results unexpected: " .
              substr($val_100k,0,10) .":". substr($v,0,10) ." / ".
              substr($val_100k,99990,10) . ":" . substr($v,99990,10);
    $mc->fail($msg)
  }
  $mc->delete("b:long_val_2")             || $mc->fail("t7 Failed delete");
  $mc->get("b:long_val_2")                && $mc->fail("t8 GET should fail");

  # INSERT, read, and delete a short value 
  $mc->add("b:short", $val_40);
  ($mc->get("b:short") eq $val_40)    || $mc->fail("t9 GET results unexpected");
  $mc->delete("b:short")              || $mc->fail("t10 delete failed");

  # Insert using SET.  Then read.  Then attempt an ADD, which should fail.
  # Short values
  $mc->set("b:test_short_set", "Mikrokosmos");
  ($mc->get("b:test_short_set") eq "Mikrokosmos" ) || $mc->fail("t11 GET fail");
  $mc->add("b:test_short_set", "!!") && $mc->fail("t12 ADD should fail");
  # Long values
  $mc->set("b:test_set", $val_60k)     || $mc->fail("t13 Failed SET as insert");
  ($mc->get("b:test_set") eq $val_60k) || $mc->fail("t14 GET results unexpected");
  $mc->add("b:test_set", $val_100k)    && $mc->fail("t15 ADD should fail");

  # UPDATE via SET from a long value to a long value
  $mc->set("b:test_set", $val_100k)     || $mc->fail("t16 Failed SET as update");
  ($mc->get("b:test_set") eq $val_100k) || $mc->fail("t17 GET results unexpected");

  # UPDATE via REPLACE from a long value to a long value
  $mc->replace("b:test_set", $val_13949) || $mc->fail("t18 failed REPLACE");
  ($mc->get("b:test_set") eq $val_13949) || $mc->fail("t19 results unexpected");

  # REPLACE of non-existing value should fail
  $mc->replace("b:test_626", $val_60k) && $mc->fail("t20 REPLACE should fail");

  # UPDATE via SET from a short value to a long value 
  $mc->add("b:test7", $val_40)        || $mc->fail("t21 Failed insert");
  ($mc->get("b:test7") eq $val_40)    || $mc->fail("t22 GET results unexpected");
  $mc->set("b:test7", $val_100k)      || $mc->fail("t23 Failed update");
  ($mc->get("b:test7") eq $val_100k)  || $mc->fail("t24 GET results unexpected");

  # UPDATE via SET from a long value to a short value
  $mc->set("b:test7", $val_50);
  ($mc->get("b:test7") eq $val_50) || $mc->fail("t25 results unexpected");

  # UPDATE via SET from a short value to a short value
  $mc->set("b:test7", $val_40);
  ($mc->get("b:test7") eq $val_40) || $mc->fail("t26 results unexpected");

  # Updates via REPLACE
  $mc->add("b:r", "a / a / a / a /");
  ($mc->get("b:r") eq "a / a / a / a /") || $mc->fail("t27 results unexpected");

  $mc->replace("b:r", $val_60k)  || $mc->fail("t28 failed REPLACE");
  $mc->replace("b:r", $val_50)   || $mc->fail("t29 failed REPLACE");
  ($mc->get("b:r") eq $val_50)   || $mc->fail("t30 results unexpected");


  ################## APPEND and PREPEND tests 

  # Inline values
  $mc->set("test8", $val_50);
  $mc->prepend("test8", $val_40);
  $mc->append("test8", $val_40);
  my $r0 = $mc->get("test8");
  ($r0 eq $val_40 . $val_50 . $val_40)  || $mc->fail("t31 results unexpected");

  # APPEND/PREPEND to empty inline value should fail
  $mc->append("empty", $val_40)  && $mc->fail("t32 append should fail");
  $mc->prepend("empty", $val_40)  && $mc->fail("t33 prepend should fail");

  # APPEND/PREPEND to empty externalizable value should fail
  $mc->append("b:empty", $val_40)  && $mc->fail("t34 append should fail");
  $mc->append("b:empty", $val_60k)  && $mc->fail("t35 append should fail");
  $mc->prepend("b:empty", $val_40)  && $mc->fail("t36 prepend should fail");
  $mc->prepend("b:empty", $val_60k)  && $mc->fail("t37 prepend should fail");
    
  # Externalizable (but short) values 
  $mc->set("b:test8", $val_50);
  $mc->prepend("b:test8", $val_40);
  $mc->append("b:test8", $val_40);
  my $r1 = $mc->get("b:test8");
  ($r1 eq $val_40 . $val_50 . $val_40)  || $mc->fail("t38 results unexpected");

  # Now make it long
  $mc->append("b:test8", $val_60k) || $mc->fail("t39 append failed");
  my $r2 = $mc->get("b:test8");
  ($r2 eq $r1 . $val_60k) || $mc->fail("t40 results unexpected");

  # Prepend to a long value 
  my $saying = "Elephants have trunks. ";
  $mc->prepend("b:test8", $saying) || $mc->fail("t41 prepend failed");
  my $r3 = $mc->get("b:test8");
  ($r3 eq $saying . $r2) || $mc->fail("t42 results unexpected:"
    . substr($r3, 0, 30) . "..." . substr($r3, -20, 20));

  # Now append a very large value to it 
  $mc->append("b:test8", $val_100k) || $mc->fail("t43 append failed");
  my $r4 = $mc->get("b:test8");
  ($r4 eq $r3 . $val_100k) || $mc->fail("t44 results unexpected");

  # Take a value 1 less than a complete part, and append one character to it
  # This tests the "update-only" optimization in append
  $mc->set("b:test8c", $val_13949) || $mc->fail("t45 set failed");
  $mc->append("b:test8c", "!");
  my $r1 = $mc->get("b:test8c");
  ($r1 eq $val_13949 . "!")    ||  $mc->fail("t46 results unexpected");

  # Now append one more character.  This tests the "insert-only" optimization.
  $mc->append("b:test8c", "?");
  my $r2 = $mc->get("b:test8c");
  ($r2 eq $val_13949 . "!?")    ||  $mc->fail("t47 results unexpected");

  # APPEND stress test.  This uses non-logging tables.
  $mc->add("bxx:t9", $val_50);
  for my $i (2 .. 300) {
    $mc->append("bxx:t9", $val_50);
    my $r = $mc->get("bxx:t9");
    ($r eq $val_50 x $i) || $mc->fail("t48 results unexpected");
  } 
    
  # PREPEND stress test.  This uses non-logging tables.
  $mc->add("bxx:t10", $val_50);
  for my $i (2 .. 300) {
    $mc->prepend("bxx:t10", $val_50);
    my $r = $mc->get("bxx:t10");
    if ($r ne $val_50 x $i) { print $r ; $mc->fail("t49 results unexpected "
                               . "at iteration " . $i); }
  } 

  # DISABLED.
  # Debug output shows this being sent from memcached core to ndb engine
  # as a "delete" rather than a "set", probably revealing a bug there 
  # which we should investigate.
  #
  ## VALUE TOO LARGE
  #my $val_too_big = "x" x ((1024 * 1024) + 1);
  #$mc->set("b:testtoobig", $val_too_big);
  #$mc->{error} =~ "VALUE_TOO_LARGE" || $mc->fail("t50 Expected TOO_LARGE");
}



