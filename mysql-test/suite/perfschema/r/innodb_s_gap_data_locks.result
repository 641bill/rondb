#Test for Shared, GAP locks
drop table if exists t1;
drop table if exists t2;
use test;
create table t1 (col1 int primary key);
create table t2 (col1 int primary key, col2 int not null, foreign key(col2) references t1(col1));
insert into t1 values (10),(20),(30),(40);
start transaction;
insert into t2 values (1, 25);
ERROR 23000: Cannot add or update a child row: a foreign key constraint fails (`test`.`t2`, CONSTRAINT `t2_ibfk_1` FOREIGN KEY (`col2`) REFERENCES `t1` (`col1`))
use performance_schema;
select object_schema, object_name,lock_type,lock_mode,lock_status,lock_data from data_locks;
object_schema	object_name	lock_type	lock_mode	lock_status	lock_data
test	t2	TABLE	IX	GRANTED	NULL
test	t1	TABLE	IS	GRANTED	NULL
test	t1	RECORD	S,GAP	GRANTED	30
start transaction;
insert into t1 values (25);
use performance_schema;
select object_schema, object_name,lock_type,lock_mode,lock_status,lock_data from data_locks;
object_schema	object_name	lock_type	lock_mode	lock_status	lock_data
test	t1	TABLE	IX	GRANTED	NULL
test	t1	RECORD	X,GAP	WAITING	30
test	t2	TABLE	IX	GRANTED	NULL
test	t1	TABLE	IS	GRANTED	NULL
test	t1	RECORD	S,GAP	GRANTED	30
commit;
commit;
drop table t2;
drop table t1;
