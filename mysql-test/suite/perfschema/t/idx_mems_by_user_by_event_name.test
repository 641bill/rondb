# Tests for PERFORMANCE_SCHEMA

--source include/not_embedded.inc
--source include/have_perfschema.inc

#setup
create user foo@localhost;
grant ALL on *.* to foo@localhost;
connect(con, localhost, foo,,);

select connection_id() into @conid;
select thread_id from performance_schema.threads
  where PROCESSLIST_ID = @conid
  into @tid;

# Test index on USER, EVENT_NAME

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select USER, EVENT_NAME
  from performance_schema.memory_summary_by_user_by_event_name
  where USER = 'foo';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select *
  from performance_schema.memory_summary_by_user_by_event_name
  where USER != 'foo';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select *
  from performance_schema.memory_summary_by_user_by_event_name
  where USER NOT LIKE 'foo';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select USER, EVENT_NAME
  from performance_schema.memory_summary_by_user_by_event_name
  where USER = 'foo' and EVENT_NAME = "impossible";

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select USER, EVENT_NAME
  from performance_schema.memory_summary_by_user_by_event_name
  where USER = 'nohost' and EVENT_NAME = "memory/sql/help";

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select USER, EVENT_NAME
  from performance_schema.memory_summary_by_user_by_event_name
  where USER = 'foo' and EVENT_NAME = "memory/sql/help";

--echo ############# Explain End #########################################

flush status;

select LOW_COUNT_USED
  from performance_schema.memory_summary_by_user_by_event_name
  where USER='foo' and EVENT_NAME = "memory/sql/help";

let $count1 = query_get_value(show session status like "handler_read_key", Value, 1);

select LOW_COUNT_USED
  from performance_schema.memory_summary_by_user_by_event_name
  where USER = 'foo' and EVENT_NAME = "memory/sql/help";

let $count2 = query_get_value(show session status like "handler_read_key", Value, 1);

if ($count1 < $count2)
{
  --echo OK: handler_read_key incremented
}
if ($count1 >= $count2)
{
  --echo ***ERROR*** handler_read_key: Before= $count1, After= $count2
}

# Cleanup
--connection default
drop user foo@localhost;
