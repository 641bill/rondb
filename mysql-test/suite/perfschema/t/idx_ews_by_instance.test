# Tests for PERFORMANCE_SCHEMA

--source include/not_embedded.inc
--source include/have_perfschema.inc

select OBJECT_INSTANCE_BEGIN from performance_schema.events_waits_summary_by_instance limit 1
  into @oib;
select EVENT_NAME from performance_schema.events_waits_summary_by_instance limit 1
  into @ename;

# Test index on OBJECT_INSTANCE_BEGIN
--disable_warnings

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select EVENT_NAME
  from performance_schema.events_waits_summary_by_instance
  where OBJECT_INSTANCE_BEGIN = "impossible";

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select EVENT_NAME
  from performance_schema.events_waits_summary_by_instance
  where OBJECT_INSTANCE_BEGIN = @oib;

--enable_warnings
--echo ############# Explain End #########################################

truncate table performance_schema.events_waits_summary_by_instance;
flush status;

--replace_column 2 #
select EVENT_NAME, COUNT_STAR
  from performance_schema.events_waits_summary_by_instance
  where OBJECT_INSTANCE_BEGIN = @oib;

show session status like "handler_read%";

--replace_column 2 #
select EVENT_NAME, COUNT_STAR
  from performance_schema.events_waits_summary_by_instance
  where OBJECT_INSTANCE_BEGIN = @oib;

show session status like "handler_read%";


# Test index on EVENT_NAME
--disable_warnings

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select COUNT_STAR
  from performance_schema.events_waits_summary_by_instance
  where EVENT_NAME = "impossible";

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select COUNT_STAR
  from performance_schema.events_waits_summary_by_instance
  where EVENT_NAME = @ename;

--enable_warnings
--echo ############# Explain End #########################################

truncate table performance_schema.events_waits_summary_by_instance;
flush status;

--replace_column 2 #
select EVENT_NAME, COUNT_STAR
  from performance_schema.events_waits_summary_by_instance
  where EVENT_NAME = @ename;

let $count1 = query_get_value(show session status like "handler_read_key", Value, 1);

--replace_column 2 #
select EVENT_NAME, COUNT_STAR
  from performance_schema.events_waits_summary_by_instance
  where EVENT_NAME = @ename;

let $count2 = query_get_value(show session status like "handler_read_key", Value, 1);

if ($count1 < $count2)
{
  --echo OK: handler_read_key incremented
}
if ($count1 >= $count2)
{
  --echo ***ERROR*** handler_read_key: Before= $count1, After= $count2
}
