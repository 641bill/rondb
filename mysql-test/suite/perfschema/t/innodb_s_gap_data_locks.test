--source include/not_embedded.inc

--echo #Test for Shared, GAP locks

-- connect (con1,localhost,root,,)
-- connect (con2,localhost,root,,)
-- connect (con3,localhost,root,,)

--disable_warnings
drop table if exists t1;
drop table if exists t2;
--enable_warnings

--connection con1
use test;
create table t1 (col1 int primary key);
create table t2 (col1 int primary key, col2 int not null, foreign key(col2) references t1(col1));
insert into t1 values (10),(20),(30),(40);

--connection con2
start transaction;
--ERROR 1452
insert into t2 values (1, 25);

--connection con3
use performance_schema;
select object_schema, object_name,lock_type,lock_mode,lock_status,lock_data from data_locks;

--connection con1
start transaction;
--send
insert into t1 values (25);

-- connection default
let $wait_condition= SELECT COUNT(*)>=1 FROM performance_schema.data_locks
  where OBJECT_NAME='t1' and LOCK_STATUS='WAITING';
--source include/wait_condition.inc

--connection con3
use performance_schema;
select object_schema, object_name,lock_type,lock_mode,lock_status,lock_data from data_locks;

--connection con2
commit;

--connection con1
--reap
commit;
drop table t2;
drop table t1;

--disconnect con1
--disconnect con2
--disconnect con3
