# Tests for PERFORMANCE_SCHEMA

--source include/not_embedded.inc
--source include/have_perfschema.inc

#setup
create user foo@localhost;
grant ALL on *.* to foo@localhost;
connect(con, localhost, foo,,);

select connection_id() into @conid;
select thread_id from performance_schema.threads
  where PROCESSLIST_ID = @conid
  into @tid;

# Test index on HOST, USER, VARIABLE_NAME

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, VARIABLE_NAME
  from performance_schema.status_by_account
  where HOST = 'localhost' and USER= 'foo';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select *
  from performance_schema.status_by_account
  where HOST != 'localhost' and USER != 'foo';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, VARIABLE_NAME
  from performance_schema.status_by_account
  where HOST = 'localhost' and USER= 'foo' and VARIABLE_NAME = 'impossible';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, VARIABLE_NAME
  from performance_schema.status_by_account
  where HOST = 'localhost' and USER= 'nouser' and VARIABLE_NAME = 'Max_execution_time_exceeded';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, VARIABLE_NAME
  from performance_schema.status_by_account
  where HOST = 'nohost' and USER= 'foo' and VARIABLE_NAME = 'Max_execution_time_exceeded';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, VARIABLE_NAME
  from performance_schema.status_by_account
  where HOST = 'localhost' and USER= 'foo' and VARIABLE_NAME = 'Max_execution_time_exceeded';

--echo ############# Explain End #########################################

flush status;

select *
  from performance_schema.status_by_account
  where HOST = 'localhost' and USER= 'foo' and VARIABLE_NAME = 'Max_execution_time_exceeded';

show session status like "handler_read%";

select *
  from performance_schema.status_by_account
  where HOST = 'localhost' and USER= 'foo' and VARIABLE_NAME = 'Max_execution_time_exceeded';

show session status like "handler_read%";

# Cleanup
--connection default
drop user foo@localhost;
