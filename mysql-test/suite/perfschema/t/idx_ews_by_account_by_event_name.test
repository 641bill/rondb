# Tests for PERFORMANCE_SCHEMA

--source include/not_embedded.inc
--source include/have_perfschema.inc

#setup
create user foo@localhost;
grant ALL on *.* to foo@localhost;
connect(con, localhost, foo,,);

select connection_id() into @conid;
select thread_id from performance_schema.threads
  where PROCESSLIST_ID = @conid
  into @tid;

# Test index on HOST, USER, EVENT_NAME

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, EVENT_NAME
  from performance_schema.events_waits_summary_by_account_by_event_name
  where HOST = 'localhost' and USER= 'foo';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select *
  from performance_schema.events_waits_summary_by_account_by_event_name
  where HOST != 'localhost' and USER != 'foo';

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, EVENT_NAME
  from performance_schema.events_waits_summary_by_account_by_event_name
  where HOST = 'localhost' and USER= 'foo' and EVENT_NAME = "impossible";

--echo ############ Explain for Query ####################################
