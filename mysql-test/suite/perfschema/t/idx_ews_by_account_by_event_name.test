explain select HOST, USER, EVENT_NAME
  from performance_schema.events_waits_summary_by_account_by_event_name
  where HOST = 'nohost' and USER= 'nouser' and EVENT_NAME = "wait/lock/table/sql/handler";

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, EVENT_NAME
  from performance_schema.events_waits_summary_by_account_by_event_name
  where HOST = 'localhost' and USER= 'nouser' and EVENT_NAME = "wait/lock/table/sql/handler";

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, EVENT_NAME
  from performance_schema.events_waits_summary_by_account_by_event_name
  where HOST = 'nohost' and USER= 'foo' and EVENT_NAME = "wait/lock/table/sql/handler";

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select HOST, USER, EVENT_NAME
  from performance_schema.events_waits_summary_by_account_by_event_name
  where HOST = 'localhost' and USER= 'foo' and EVENT_NAME = "wait/lock/table/sql/handler";

--echo ############# Explain End #########################################

flush status;

select EVENT_NAME, COUNT_STAR
  from performance_schema.events_waits_summary_by_thread_by_event_name
  where thread_id = @tid and EVENT_NAME = "wait/lock/table/sql/handler";

let $count1 = query_get_value(show session status like "handler_read_key", Value, 1);

select EVENT_NAME, COUNT_STAR
  from performance_schema.events_waits_summary_by_thread_by_event_name
  where thread_id = @tid and EVENT_NAME = "wait/lock/table/sql/handler";

let $count2 = query_get_value(show session status like "handler_read_key", Value, 1);

if ($count1 < $count2)
{
  --echo OK: handler_read_key incremented
}
if ($count1 >= $count2)
{
  --echo ***ERROR*** handler_read_key: Before= $count1, After= $count2
}

# Cleanup
--connection default
drop user foo@localhost;
