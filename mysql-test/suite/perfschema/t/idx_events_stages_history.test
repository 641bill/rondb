# Tests for PERFORMANCE_SCHEMA

--source include/not_embedded.inc
--source include/have_perfschema.inc

select connection_id() into @conid;

let $tid = `select thread_id from performance_schema.threads
            where PROCESSLIST_ID = @conid`;

truncate table performance_schema.events_stages_history;

--disable_query_log
--eval select EVENT_ID from performance_schema.events_stages_history where THREAD_ID = $tid limit 1 into @eid_default;
--eval select $tid into @tid_default;
--enable_query_log

###########################################################################
# Test index on THREAD_ID, EVENT_ID
###########################################################################

--disable_warnings
--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select THREAD_ID, EVENT_ID
  from performance_schema.events_stages_history
  where THREAD_ID = 1;

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select *
  from performance_schema.events_stages_history
  where THREAD_ID > 1;

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select *
  from performance_schema.events_stages_history
  where THREAD_ID < 1;

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select THREAD_ID, EVENT_ID
  from performance_schema.events_stages_history
  where THREAD_ID = 1 and EVENT_ID = "impossible";

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select THREAD_ID, EVENT_ID
  from performance_schema.events_stages_history
  where THREAD_ID = 99999 and EVENT_ID = @eid_default;

--echo ############ Explain for Query ####################################
--replace_column 10 #
explain select THREAD_ID, EVENT_ID
  from performance_schema.events_stages_history
  where THREAD_ID = @tid_default and EVENT_ID = @eid_default;

--echo ############# Explain End #########################################
--enable_warnings

flush status;

--replace_column 1 #
select EVENT_NAME
  from performance_schema.events_stages_history
  where thread_id = @tid_default and EVENT_ID = @eid_default;

let $count1 = query_get_value(show session status like "handler_read_key", Value, 1);

--replace_column 1 #
select EVENT_NAME
  from performance_schema.events_stages_history
  where thread_id = @tid_default and EVENT_ID = @eid_default;

let $count2 = query_get_value(show session status like "handler_read_key", Value, 1);

if ($count1 < $count2)
{
  --echo OK: handler_read_key incremented
}
if ($count1 >= $count2)
{
  --echo ***ERROR*** handler_read_key: Before= $count1, After= $count2
}
