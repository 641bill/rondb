#
# 0. Create a user and a connection with it
CREATE USER u1@localhost;
GRANT ALL ON db1.* TO u1@localhost;
SELECT CURRENT_USER();
CURRENT_USER()
u1@localhost
SHOW GRANTS FOR CURRENT_USER();
Grants for u1@localhost
GRANT USAGE ON *.* TO `u1`@`localhost`
GRANT ALL PRIVILEGES ON `db1`.* TO `u1`@`localhost`
#
# 1. Test the use by a unprivileged user
include/assert.inc [By default the value is set to OFF]
SELECT @@SESSION.replica_generate_invisible_primary_key;
ERROR HY000: Variable 'replica_generate_invisible_primary_key' is a GLOBAL variable
SET LOCAL replica_generate_invisible_primary_key=true;
ERROR HY000: Variable 'replica_generate_invisible_primary_key' is a GLOBAL variable and should be set with SET GLOBAL
SET GLOBAL replica_generate_invisible_primary_key=false;
ERROR 42000: Access denied; you need (at least one of) the SUPER or SYSTEM_VARIABLES_ADMIN privilege(s) for this operation
SET GLOBAL replica_generate_invisible_primary_key=true;
ERROR 42000: Access denied; you need (at least one of) the SUPER or SYSTEM_VARIABLES_ADMIN privilege(s) for this operation
SET GLOBAL replica_generate_invisible_primary_key=DEFAULT;
ERROR 42000: Access denied; you need (at least one of) the SUPER or SYSTEM_VARIABLES_ADMIN privilege(s) for this operation
#
# 2. Test the use by a user with SESSION_VARIABLES_ADMIN privilege.
GRANT SYSTEM_VARIABLES_ADMIN ON *.* TO u1@localhost;
SELECT CURRENT_USER();
CURRENT_USER()
u1@localhost
SHOW GRANTS FOR CURRENT_USER();
Grants for u1@localhost
GRANT USAGE ON *.* TO `u1`@`localhost`
GRANT SYSTEM_VARIABLES_ADMIN ON *.* TO `u1`@`localhost`
GRANT ALL PRIVILEGES ON `db1`.* TO `u1`@`localhost`
SET GLOBAL replica_generate_invisible_primary_key=true;
include/assert.inc [The value is set to 1]
SET GLOBAL replica_generate_invisible_primary_key=DEFAULT;
include/assert.inc [The value is set to 0]
#
# 3. Test the use by a user with SUPER privilege.
REVOKE SESSION_VARIABLES_ADMIN ON *.* FROM u1@localhost;
GRANT SUPER ON *.* TO u1@localhost;
Warnings:
Warning	1287	The SUPER privilege identifier is deprecated
GRANT PERSIST_RO_VARIABLES_ADMIN ON *.* TO u1@localhost;
SELECT CURRENT_USER();
CURRENT_USER()
u1@localhost
SHOW GRANTS FOR CURRENT_USER();
Grants for u1@localhost
GRANT SUPER ON *.* TO `u1`@`localhost`
GRANT PERSIST_RO_VARIABLES_ADMIN,SYSTEM_VARIABLES_ADMIN ON *.* TO `u1`@`localhost`
GRANT ALL PRIVILEGES ON `db1`.* TO `u1`@`localhost`
SET GLOBAL replica_generate_invisible_primary_key=true;
include/assert.inc [The value is set to 1]
SET GLOBAL replica_generate_invisible_primary_key=false;
include/assert.inc [The value is set to 0]
#
# 4. Test SET PERSIST
SET PERSIST replica_generate_invisible_primary_key=false;
SET PERSIST_ONLY replica_generate_invisible_primary_key=true;
#
# 5. Test errors when changing the variable to invalid values
SET GLOBAL replica_generate_invisible_primary_key = -1;
ERROR 42000: Variable 'replica_generate_invisible_primary_key' can't be set to the value of '-1'
SET GLOBAL replica_generate_invisible_primary_key = 100000000000;
ERROR 42000: Variable 'replica_generate_invisible_primary_key' can't be set to the value of '100000000000'
SET GLOBAL replica_generate_invisible_primary_key = 10000.01;
ERROR 42000: Incorrect argument type to variable 'replica_generate_invisible_primary_key'
SET GLOBAL replica_generate_invisible_primary_key = 'test';
ERROR 42000: Variable 'replica_generate_invisible_primary_key' can't be set to the value of 'test'
SET GLOBAL replica_generate_invisible_primary_key = '';
ERROR 42000: Variable 'replica_generate_invisible_primary_key' can't be set to the value of ''
#
# 6. Cleanup
RESET PERSIST replica_generate_invisible_primary_key;
DROP USER u1@localhost;
SET GLOBAL replica_generate_invisible_primary_key=default;
