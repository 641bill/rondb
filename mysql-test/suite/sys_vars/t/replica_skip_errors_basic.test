#
# only global
#
select @@global.replica_skip_errors;
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
select @@session.replica_skip_errors;
show global variables like 'replica_skip_errors';
show session variables like 'replica_skip_errors';
--disable_warnings
select * from performance_schema.global_variables where variable_name='replica_skip_errors';
select * from performance_schema.session_variables where variable_name='replica_skip_errors';
--enable_warnings

#
# show that it's read-only
#
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
set global replica_skip_errors=1;
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
set session replica_skip_errors=1;
