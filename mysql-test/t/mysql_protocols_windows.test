# Embedded server doesn't support external clients
--source include/not_embedded.inc
# Windows does not have SOCKET, but will try to create a PIPE as well as MEMORY
--source include/windows.inc

# test for Bug #4998 "--protocol doesn't reject bad values"

--exec echo "select ' ok' as '<default>'" | $MYSQL
--exec echo "select ' ok' as 'TCP'"       | $MYSQL --protocol=TCP
--exec echo "select ' ok' as 'SOCKET'"    | $MYSQL --protocol=SOCKETE 2>&1 || true
--exec echo "select ' ok' as 'PIPE'"      | $MYSQL --protocol=PIPE
--exec echo "select ' ok' as 'MEMORY'"    | $MYSQL --protocol=MEMORY
--exec echo "select ' ok' as 'NullS'"     | $MYSQL --protocol=NullS

# End of 4.1 tests

# WL#7729
#
## Connection Protocols: PIPE, MEMORY, TCP/IP, SSL/TLS BY enabling general log. 

# Make sure we start with a clean slate. log_tables.test says this is OK.
TRUNCATE TABLE mysql.general_log;

--echo --------------- general log ---------------------------------------

SET @old_log_output=    @@global.log_output;
SET @old_general_log=         @@global.general_log;
SET @old_general_log_file=    @@global.general_log_file;

let $general_file_on = $MYSQLTEST_VARDIR/log/general_connection_protocols.log;
--replace_result $MYSQLTEST_VARDIR MYSQLTEST_VARDIR
eval SET GLOBAL general_log_file = '$general_file_on';
SET GLOBAL log_output =       'FILE,TABLE';
SET GLOBAL general_log=       'ON';

--echo
# Checking default connection_type.

SELECT connection_type FROM performance_schema.threads WHERE processlist_command='Query';

CREATE USER 'user_tcp'@'127.0.0.1';
GRANT ALL PRIVILEGES ON *.* TO 'user_tcp'@'127.0.0.1';
CREATE USER 'user_ssl'@'127.0.0.1';
GRANT ALL PRIVILEGES ON *.* TO 'user_ssl'@'127.0.0.1';


#connect(pipe_con1,localhost,root,,,,$MASTER_MYSOCK,PIPE);
# SELECT connection_type FROM performance_schema.threads WHERE processlist_command='Query';
#connection default;
#disconnect pipe_con1;

--echo
--echo # MYSQLADMIN test 
# For SSL enabled server mysql and mysqladmin should connect using CONNECTION_TYPE: SSL/TLS. 
--exec $MYSQLADMIN --host=localhost -S $MASTER_MYSOCK  -uroot ping
--echo
--exec $MYSQLADMIN -S $MASTER_MYSOCK -P $MASTER_MYPORT -uroot --protocol=PIPE ping

--echo # Mysql client with SSL enabled server.
--exec $MYSQL --host=localhost --user=root --socket=$MASTER_MYSOCK --protocol=PIPE -e "select CONNECTION_TYPE from performance_schema.threads where processlist_command='Query'"

--echo
--echo # Connection type testing for TCP/IP  protocol 

#connect(tcp_con1,localhost,root,,,,,TCP);
#SELECT connection_type FROM performance_schema.threads WHERE processlist_command='Query';
#connection default;
#disconnect tcp_con1;

--echo
--echo # MYSQLADMIN test 
# For SSL enabled server mysql and mysqladmin should connect using CONNECTION_TYPE: SSL/TLS.
--exec $MYSQLADMIN --host=127.0.0.1 -S $MASTER_MYSOCK -P $MASTER_MYPORT -uuser_tcp ping
--echo
--exec $MYSQLADMIN --host=127.0.0.1 -S $MASTER_MYSOCK -P $MASTER_MYPORT -uuser_tcp --protocol=TCP ping

--echo # Mysql client with SSL enabled server.
--exec $MYSQL --host=localhost --user=root --socket=$MASTER_MYSOCK --protocol=TCP -e "select CONNECTION_TYPE from performance_schema.threads where processlist_command='Query'"
--exec $MYSQL --host=127.0.0.1 --user=user_tcp --socket=$MASTER_MYSOCK --protocol=TCP -e "select CONNECTION_TYPE from performance_schema.threads where processlist_command='Query'"
#
--echo # Testing TCP/IP connections over SSL/TLS
#

connect(ssl_con1,localhost,root,,,,$MASTER_MYSOCK,SSL);
SELECT connection_type FROM performance_schema.threads WHERE processlist_command='Query';

connection default;
disconnect ssl_con1;
--echo
--echo # MYSQLADMIN test 
# For SSL enabled server mysql and mysqladmin should connect using CONNECTION_TYPE: SSL/TLS.
--exec $MYSQLADMIN --host=127.0.0.1 -S $MASTER_MYSOCK -P $MASTER_MYPORT -uuser_tcp  ping
--echo
--exec $MYSQLADMIN -S $MASTER_MYSOCK -P $MASTER_MYPORT -uuser_tcp --protocol=TCP --ssl ping

--echo # Mysql client with SSL enabled server.
--exec $MYSQL --host=localhost --user=root --socket=$MASTER_MYSOCK --ssl  -e "select CONNECTION_TYPE from performance_schema.threads where processlist_command='Query'"

--exec $MYSQL --host=127.0.0.1 --user=user_ssl --socket=$MASTER_MYSOCK --protocol=TCP --ssl -e "select CONNECTION_TYPE from performance_schema.threads where processlist_command='Query'"

--echo

CREATE TABLE test_log (argument TEXT);
--replace_result $MYSQLTEST_VARDIR MYSQLTEST_VARDIR
eval LOAD DATA LOCAL INFILE '$general_file_on'
INTO TABLE test_log FIELDS TERMINATED BY '\n' LINES TERMINATED BY '\n';

--echo Show what is logged:
--echo ------ rewrite ------
SELECT argument FROM mysql.general_log where command_type='connect';
--echo ------ done ------

--remove_file $general_file_on
DROP table test_log;

SET GLOBAL general_log_file=  @old_general_log_file;
SET GLOBAL general_log=       @old_general_log;
SET GLOBAL log_output=        @old_log_output;


--echo #Cleanup
DROP USER 'user_tcp'@'127.0.0.1', 'user_ssl'@'127.0.0.1';


